# Environment Variables Example
# Copy this to .env.local and fill in your values

# Database (Supabase)
DATABASE_URL="postgresql://postgres:[YOUR_DB_PASSWORD]@[YOUR_PROJECT_REF].supabase.co:5432/postgres"
NEXT_PUBLIC_SUPABASE_URL="https://[YOUR_PROJECT_REF].supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# NextAuth
NEXTAUTH_SECRET="your-nextauth-secret"
NEXTAUTH_URL="http://localhost:3000"

# Payments - Paystack
PAYSTACK_SECRET_KEY="sk_test_..."
PAYSTACK_PUBLIC_KEY="pk_test_..."
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY="pk_test_..."

# Communication - Email (Resend)
RESEND_API_KEY="re_..."

# Communication - SMS (Twilio or Africa's Talking)
TWILIO_ACCOUNT_SID="AC..."
TWILIO_AUTH_TOKEN="your-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Alternative: Africa's Talking
AFRICAS_TALKING_API_KEY="your-api-key"
AFRICAS_TALKING_USERNAME="your-username"

# EmailJS Configuration
EMAILJS_SERVICE_ID=your_service_id
EMAILJS_PUBLIC_KEY=hFsjvkpz6O4qKhj_kew9y
EMAILJS_PRIVATE_KEY=hFsjvkpz6O4qKhj_kew9y

# Google OAuth (for login)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="http://localhost:3000/api/auth/callback/google"

# Storage (Supabase Storage)
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET="project-files"
